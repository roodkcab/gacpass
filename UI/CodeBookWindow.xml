<Folder>

	<Image content="File" name="Folder">Folder.png</Image>
	<Image content="File" name="New">New.png</Image>
	<Image content="File" name="Edit">Edit.png</Image>
	<Image content="File" name="Delete">Delete.png</Image>

	<Script>
		<Workflow>
			<![CDATA[
			module viewmodel;
			using system::*;

			namespace gacpass
			{
        enum HostType
        {
          Website = 0,
          Server = 1,
          Database = 2,
        }

        func ToString(value : HostType) : string
        {
          switch (value)
          {
            case Website: { return "Website"; }
            case Server: { return "Server"; }
            case Database: { return "Database"; }
          }
          return "";
        }

				interface ICode
				{
				  prop Id : int {not observe}
					prop Title : string {not observe}
					prop Username	: string {not observe}
					prop Password	: string {not observe}
					prop HidePassword : string {const, not observe}
					prop References : observe IReference^[] {const, not observe}

					func Update(code : ICode^) : void;
					func AddReference() : void;
				}

				interface IReference
				{
          prop Id : int {not observe}
					prop CodeId: int {not observe}
					prop Type : HostType {not observe}
					prop Content : string {not observe}

					func Update(reference: IReference^) : void;
        }

				interface ICodeBookViewModel
				{
					prop Codes : observe ICode^[] {const, not observe}
					prop Search : string {}
					prop SelectedCode : ICode^ {}
          prop EditCodeViewModel : IEditCodeViewModel^ {const}

					func AddCode(code : ICode^) : void;
					func UpdateCode(code : ICode^) : void;
					func RemoveCode(code : ICode^) : void;

					func OnItemLeftButtonDoubleClick(arguments : presentation::compositions::GuiItemMouseEventArgs*) : void;
				}

				interface IEditCodeViewModel
        {
				  prop SelectedReference : IReference^ {}
          prop Code : ICode^ {const}
          prop CodeLength : int {}
          prop SpecialCharLength : int {}

          func Clear() : void;
        }
			}
			]]>
		</Workflow>
	</Script>
	<Instance name="CodeBookWindow">
		<Instance ref.CodeBehind="false" ref.Class="gacpass::CodeBookWindow" xmlns:gacpass="gacpass::*">
			<ref.Parameter Name="ListViewModel" Class="gacpass::ICodeBookViewModel" />
			<ref.Parameter Name="MainWindow" Class="presentation::controls::GuiWindow"/>
			<CustomControl ref.Name="self">
				<att.BoundsComposition-set PreferredMinSize="x:700 y:478"/>
				<att.ListViewModel-set>
					<att.SelectedCode-bind>listViewCodes.SelectedItem as (gacpass::ICode^)</att.SelectedCode-bind>
					<att.Search-bind>textBoxSearch.Text</att.Search-bind>
          <att.EditCodeViewModel-set>
            <att.Code-set>
              <att.Title-bind>textBoxTitle.Text</att.Title-bind>
              <att.Username-bind>textBoxUsername.Text</att.Username-bind>
              <att.Password-bind>textBoxPassword.Text</att.Password-bind>
            </att.Code-set>
            <att.SelectedReference-bind>gridViewReferences.SelectedRowValue as (gacpass::IReference^)</att.SelectedReference-bind>
            <att.CodeLength-bind>hTrackerCodeLength.Position</att.CodeLength-bind>
            <att.SpecialCharLength-bind>hTrackerSpecialCharLength.Position</att.SpecialCharLength-bind>
          </att.EditCodeViewModel-set>
        </att.ListViewModel-set>
        <ToolstripCommand ref.Name="commandNewCode" Image-uri="res://CodeBookWindowResource/New">
					<ev.Executed-eval>
						<![CDATA[
                $Async{
                  ListViewModel.EditCodeViewModel.Clear();
                }
              ]]>
					</ev.Executed-eval>
				</ToolstripCommand>
				<ToolstripCommand ref.Name="commandEditCode" Image-uri="res://CodeBookWindowResource/Edit">
					<att.Enabled-bind>ListViewModel.SelectedCode is not null</att.Enabled-bind>
					<ev.Executed-eval>
						<![CDATA[
                $Async{
                  ListViewModel.EditCodeViewModel.Code.Update(ListViewModel.SelectedCode);
                }
              ]]>
					</ev.Executed-eval>
				</ToolstripCommand>
				<ToolstripCommand ref.Name="commandRemoveCode" Image-uri="res://CodeBookWindowResource/Delete">
					<att.Enabled-bind>ListViewModel.SelectedCode is not null</att.Enabled-bind>
					<ev.Executed-eval>
						<![CDATA[
                $Async{
                  ListViewModel.RemoveCode(ListViewModel.SelectedCode);
                }
              ]]>
					</ev.Executed-eval>
				</ToolstripCommand>
        <ToolstripCommand ref.Name="commandNewReference" Image-uri="res://CodeBookWindowResource/New">
					<ev.Executed-eval>
						<![CDATA[
                $Async{
									ListViewModel.EditCodeViewModel.Code.AddReference();
                }
              ]]>
					</ev.Executed-eval>
				</ToolstripCommand>
				<ToolstripCommand ref.Name="commandRemoveReference" Image-uri="res://CodeBookWindowResource/Delete">
					<ev.Executed-eval>
						<![CDATA[
                $Async{
									ListViewModel.EditCodeViewModel.SelectedReference.SetCodeId(0);
									Filter.UpdateFilter();
                }
              ]]>
					</ev.Executed-eval>
				</ToolstripCommand>

        <gacpass:ReferenceFilter ref.Name="Filter"></gacpass:ReferenceFilter>
        <Table CellPadding="5" AlignmentToParent="left:0 top:28 right:0 bottom:0">
          <att.Rows>
            <CellOption>composeType:MinSize</CellOption>
          </att.Rows>
          <att.Columns>
            <CellOption>composeType:MinSize</CellOption>
            <CellOption>composeType:Percentage percentage:1.0</CellOption>
          </att.Columns>
          <Cell Site="row:0 column:0">
            <Table CellPadding="5" BorderVisible="false" AlignmentToParent="left:0 top:28 right:-1 bottom:-1" PreferredMinSize="x:230 y:450">
              <att.Rows>
                <CellOption>composeType:MinSize</CellOption>
                <CellOption>composeType:Percentage percentage:1.0</CellOption>
              </att.Rows>
              <att.Columns>
                <CellOption>composeType:Percentage percentage:1.0</CellOption>
              </att.Columns>
              <Cell Site="row:0 column:0">
                <ToolstripToolBar>
                  <att.BoundsComposition-set AlignmentToParent="left:0 top:0 right:0 bottom:0"/>
                  <ToolstripButton Command-ref="commandNewCode"/>
                  <ToolstripButton Command-ref="commandEditCode"/>
                  <ToolstripButton Command-ref="commandRemoveCode"/>
                </ToolstripToolBar>
                <SinglelineTextBox ref.Name="textBoxSearch">
                  <att.BoundsComposition-set AlignmentToParent="left:100 top:0 right:0 bottom:0" PreferredMinSize="x:100 y:24"/>
                </SinglelineTextBox>
              </Cell>
              <Cell Site="row:1 column:0">
                <BindableListView ref.Name="listViewCodes" View="Detail" HorizontalAlwaysVisible="false" VerticalAlwaysVisible="false" env.ItemType="gacpass::ICode^" ev.ItemLeftButtonDoubleClick-eval="ListViewModel.OnItemLeftButtonDoubleClick(arguments);">
                  <att.BoundsComposition-set AlignmentToParent="left:0 top:0 right:0 bottom:0"/>
                  <att.ItemSource-bind>
                    <![CDATA[
									ListViewModel.Codes ?? null
								]]>
                  </att.ItemSource-bind>

                  <att.Columns>
                    <ListViewColumn Text="Title" TextProperty="Title" Size="120"/>
                    <ListViewColumn Text="Username" TextProperty="Username" Size="120"/>
                    <ListViewColumn Text="Passowrd" TextProperty="HidePassword" Size="120"/>
                  </att.Columns>

                  <att.DataColumns>
                    <_>1</_>
                    <_>2</_>
                  </att.DataColumns>
                </BindableListView>
              </Cell>
            </Table>
          </Cell>
          <Cell Site="row:0 column:1">
            <Table CellPadding="5" AlignmentToParent="left:-1 top:0 right:0 bottom:-1" PreferredMinSize="x:570 y:450">
              <att.Rows>
                <CellOption>composeType:MinSize</CellOption>
                <CellOption>composeType:MinSize</CellOption>
                <CellOption>composeType:MinSize</CellOption>
                <CellOption>composeType:MinSize</CellOption>
                <CellOption>composeType:MinSize</CellOption>
                <CellOption>composeType:Percentage percentage:1.0</CellOption>
                <CellOption>composeType:MinSize</CellOption>
              </att.Rows>
              <att.Columns>
                <CellOption>composeType:MinSize</CellOption>
                <CellOption>composeType:Percentage percentage:1.0</CellOption>
                <CellOption>composeType:MinSize</CellOption>
                <CellOption>composeType:MinSize</CellOption>
              </att.Columns>

              <Cell Site="row:0 column:0" InternalMargin="top:6">
                <Label Text="Title:"/>
              </Cell>
              <Cell Site="row:0 column:1 columnSpan:3">
                <DocumentTextBox ref.Name="textBoxTitle" EditMode="Editable" Text-bind="ListViewModel.EditCodeViewModel.Code.Title">
                  <att.BoundsComposition-set AlignmentToParent="left:0 top:0 right:0 bottom:0"/>
                </DocumentTextBox>
              </Cell>

              <Cell Site="row:1 column:0" InternalMargin="top:6">
                <Label Text="Username:"/>
              </Cell>
              <Cell Site="row:1 column:1 columnSpan:3">
                <DocumentTextBox ref.Name="textBoxUsername" EditMode="Editable" Text-bind="ListViewModel.EditCodeViewModel.Code.Username">
                  <att.BoundsComposition-set AlignmentToParent="left:0 top:0 right:0 bottom:0"/>
                </DocumentTextBox>
              </Cell>

              <Cell Site="row:2 column:0" InternalMargin="top:6">
                <Label Text="Password:"/>
              </Cell>
              <Cell Site="row:2 column:1 columnSpan:3">
                <DocumentTextBox ref.Name="textBoxPassword" EditMode="Editable" Text-bind="ListViewModel.EditCodeViewModel.Code.Password">
                  <att.BoundsComposition-set AlignmentToParent="left:0 top:0 right:0 bottom:0"/>
                </DocumentTextBox>
              </Cell>

              <Cell Site="row:3 column:0">
                <Label Text="Code Length:"/>
              </Cell>
              <Cell Site="row:3 column:1">
                <HTracker ref.Name="hTrackerCodeLength" TotalSize="30" Position-bind="ListViewModel.EditCodeViewModel.CodeLength">
                  <att.BoundsComposition-set AlignmentToParent="left:0 top:0 right:0 bottom:0"/>
                </HTracker>
              </Cell>
              <Cell Site="row:3 column:2">
                <Label Text="SpecialChar Length:"/>
              </Cell>
              <Cell Site="row:3 column:3">
                <HTracker ref.Name="hTrackerSpecialCharLength" TotalSize="5" Position-bind="ListViewModel.EditCodeViewModel.SpecialCharLength">
                  <att.BoundsComposition-set AlignmentToParent="left:0 top:0 right:0 bottom:0"/>
                </HTracker>
              </Cell>

              <Cell Site="row:4 column:1 columnSpan:3">
                <ToolstripToolBar>
                  <att.BoundsComposition-set AlignmentToParent="left:0 top:0 right:0 bottom:0"/>
                  <ToolstripButton Command-ref="commandNewCode"/>
                  <ToolstripButton Command-ref="commandRemoveCode"/>
                </ToolstripToolBar>
              </Cell>

              <Cell Site="row:5 column:1 columnSpan:3">
                <BindableDataGrid ref.Name="gridViewReferences" env.ItemType="gacpass::IReference^" env.ItemName="item" HorizontalAlwaysVisible="false" VerticalAlwaysVisible="false">

                  <att.BoundsComposition-set AlignmentToParent="left:0 top:0 right:0 bottom:0"/>
                  <att.ItemSource-bind>
                    <![CDATA[
									ListViewModel.EditCodeViewModel.Code.References ?? null
								]]>
                  </att.ItemSource-bind>
                  <att.AdditionalFilter-bind>
                    <![CDATA[
									Filter.Filter ?? null
								]]>
                  </att.AdditionalFilter-bind>

                  <att.Columns>
                    <DataColumn Text="Type" Size="120">
                      <att.TextProperty>gacpass::ToString(item.Type)</att.TextProperty>
                      <att.ValueProperty>Type</att.ValueProperty>
                      <att.VisualizerFactory>gacpass:HostTypeVisualizer;CellBorderVisualizerTemplate</att.VisualizerFactory>
                      <att.EditorFactory>gacpass:HostTypeEditor</att.EditorFactory>
                    </DataColumn>

                    <DataColumn Text="Content" Size="80">
                      <att.TextProperty>Content</att.TextProperty>
                      <att.ValueProperty>Content</att.ValueProperty>
                      <att.EditorFactory>gacpass:TextEditor</att.EditorFactory>
                    </DataColumn>
                  </att.Columns>

                  <att.DataColumns>
                    <_>0</_>
                  </att.DataColumns>
                </BindableDataGrid>
              </Cell>

              <Cell Site="row:6 column:2">
                <Button Text="OK">
                  <att.BoundsComposition-set PreferredMinSize="x:60"/>
                  <ev.Clicked-eval>
                    <![CDATA[
                    {
                    }
                  ]]>
                  </ev.Clicked-eval>
                </Button>
              </Cell>
              <Cell Site="row:6 column:3">
                <Button Text="Cancel">
                  <att.BoundsComposition-set PreferredMinSize="x:60"/>
                  <ev.Clicked-eval>
                    <![CDATA[
                    {
                    }
                  ]]>
                  </ev.Clicked-eval>
                </Button>
              </Cell>
            </Table>
          </Cell>
        </Table>
      </CustomControl>
    </Instance>
  </Instance>
</Folder>